{
  "env": {
    "browser": true,
    "es6": true
  },

  "extends": ["eslint:recommended", "plugin: prettier/recommended"],

  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "LF"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  }
}
